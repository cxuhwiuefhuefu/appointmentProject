
.container {
  background: #5346CD; 
}

/* 头部 */
.record {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  padding: 0 10rpx 0 10rpx;
  font-size: 23rpx;
  color: #FFFFFF;
}




/* 预约信息 */
.locationMessage {
  width: 100%;
}
.content {
  padding: 20rpx 40rpx 0rpx 40rpx;
  /* background: red; */
}

.appointmentsNumber,
.playTime {
  padding-left: 10rpx;
  font-size: 23rpx;
  color: #FFFFFF;
}

.section {
  padding-left: 40rpx;
}
.section .picker {
  width: 400rpx;
  height: 40rpx;
  padding-left: 10rpx;
  border-radius: 5rpx;
  font-size: 23rpx;
  background: #FFFFFF;
  line-height: 40rpx;
}

.chooseTime {
  display: flex;
  justify-content: space-between;
}
.chooseTime view {
  width: 45%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #FFFFFF;
}

.chooseLocation {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
 
  width: 100%;
  height: 300rpx;
}

.chooseLocation view {
  width: 30%;
  height: 60rpx;
  background: #FFFFFF;
  line-height: 60rpx;
  text-align: center;
  font-size: 18rpx;
  border-radius: 5rpx;
}



/* 个人信息登记 */
.personalInfomation {
  width: 100%;
  padding: 0rpx 20rpx 20rpx 20rpx;
  /* background: blue; */
}

.enterName {
  /* background: red; */
}
.name {
  color: #FFFFFF;
}
.inputName {
  width: 70%;
  border-radius: 5rpx;
  margin-left: 20rpx;
  padding-left: 10rpx;
  background: #FFFFFF;
}
.prompt {
  font-size: 20rpx;
  color: #FFFFFF;
}
.selectNumber {
  margin-top: 10rpx;
  /* background: red; */
}
.card {
  color: #FFFFFF;
}
.certificateType {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 80%;
  margin-left: 20rpx;
}
.certificateType .chinaCard {
  width: 240rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 25rpx;
  border-radius: 5rpx;
  background: #FFFFFF;
}
.certificateType .otherCard {
  margin-left: 10rpx;
  width: 160rpx;
  height: 40rpx;
  font-size: 25rpx;
  text-align: center;
  border-radius: 5rpx;
  background: #FFFFFF;
}
.certificateType .enterOtherCard {
  margin-top: 7rpx;
  width: 456rpx;
  background: #FFFFFF;
  border-radius: 5rpx;
}
.certificateType .identifyCard {
  margin-top: 10rpx;
  width: 300rpx;
  height: 40rpx;
  font-size: 25rpx;
  text-align: center;
  border-radius: 5rpx;
  background: #FFFFFF;
}
.inputRule {
  font-size: 22rpx;
  color: #FFFFFF;
}

.phoneNumber {
  font-size: 24rpx;
  color: #FFFFFF;
}
.enterPhone input{
  margin-left: 20rpx;
  width: 70%;
  padding-left: 10rpx;
  border-radius: 5rpx;
  background: #FFFFFF;
}




/* 特殊的class类名 */
.active {
  color: blue;
}
/* 输入框显示 */
.inputUp {
  display: block;
}
/* 输入框隐藏 */
.inputDown {
  display: none;
}



.confirm {
  padding: 0rpx;
  margin-top: 10rpx;
  width: 300rpx;
  height: 66rpx;
  border-radius: 5rpx;
  line-height: 66rpx;
  text-align: center;
  background: #93bcfe;
  color: #FFFFFF;
}




/* 自定义弹窗 */
.popupWindow {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 9999;
  width: 72%;
  padding-bottom: 102rpx;
  background: #FFFFFF;
  border-radius: 5rpx;
}
.otherArea {
  font-size: 16rpx;
  color: gray;
  padding-left: 10rpx;
}
.comfirmInfomation {
  display: flex;
  flex-wrap: wrap;
  margin: 10rpx 0rpx 10rpx 0rpx;
}
.comfirmTourist,
.comfirmArea {
  padding-left: 10rpx;
  font-size: 26rpx;
}
.confirmName,
.comfirmPhone,
.confirmCard,
.comfirmTime {
  padding: 10rpx;
  font-size: 26rpx;
  height: 30rpx;
}
.confirmName {
  width: 200rpx;  
}
.comfirmPhone {
  width: 300rpx;
}
.confirmCard {
  width: 600rpx;
}
.comfirmTime {
  width: 600rpx;
}


.confirmMessage {
  text-align: center;
  font-size: 37rpx;
}

.promiseMessage{
  padding: 0rpx 40rpx 0rpx 40rpx;
  font-size: 16rpx;
  font-weight: bold;
}


.comfirmReport {
  margin-top: 20rpx;
  border: 1rpx solid blue;
  color: #1290FF;
  padding:10rpx 0 10rpx 0rpx;
  font-size: 20rpx;

}
.closeBtn {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  padding: 10rpx;
  border-radius: 50%;
  background: red;
  width: 10rpx;
  height: 10rpx;
}